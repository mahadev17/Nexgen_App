<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dip"
                android:text="@string/viewer_name"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edit_viewer"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_marginLeft="53dp"
                android:layout_weight="2"
                android:background="@drawable/textbox_1"
                android:inputType="text"
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="12sp" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dip"
                android:text="@string/viewer_email"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edit_viewer_email"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_marginLeft="84dp"
                android:layout_weight="2.5"
                android:background="@drawable/textbox_1"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="12sp" 
                  android:layout_marginBottom="5dp">

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dip"
                android:text="@string/password"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edit_viewer_pass"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_marginLeft="65dp"
                android:layout_weight="2"
                android:background="@drawable/textbox_1"
                android:inputType="text"
                android:padding="10dp"
                  android:layout_marginBottom="5dp"
                android:textSize="12sp" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dip"
                android:text="@string/confirm_pass"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edit_viewer_confirm_pass"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_marginLeft="14dp"
                android:layout_weight="2.5"
                android:background="@drawable/textbox_1"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="12sp" >
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp" >

        <Button
            android:id="@+id/btn_viewer_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_btn" />
    </LinearLayout>

</LinearLayout>